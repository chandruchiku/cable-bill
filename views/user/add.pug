extends /layout/base 

block extraLinks
	link(rel='stylesheet', href='/plugins/pace/pace.min.css')
block extraJS
	script(type='text/javascript', src='/javascripts/user/addUser.js')
	script(type='text/javascript', src='/plugins/pace/pace.min.js')
block content
	section.content-header
		h1
			| Create User
			small .
		ol.breadcrumb
			li
				a(href='#')
					i.fa.fa-dashboard
					|  Home
			li
				a(href='#') User
			li.active Create User
	// Main content
	section.content
		.row
			// left column
			//.col-md-4
			.col-md-6
				// general form elements
				.box.box-primary
					.box-header.with-border
						h3.box-title Create User
					// /.box-header
					// form start
					form(role='form')
						.box-body
							.form-group
								label(for='name') Name
								input#name.form-control(type='text', placeholder='Enter name')
							.form-group
								label(for='username') Username
								input#username.form-control(type='text', placeholder='Enter username')
							.form-group
								label(for='password') Password
								input#password.form-control(type='password', placeholder='Password')
							.form-group
								label(for='password2') Password
								input#password2.form-control(type='password', placeholder='Retype Password')
							// select
							.form-group
								label Role
								select#role.form-control 
									option Administrator
									option Bill Collector
									option Report Viewer
									option Backend Ops
						// /.box-body
						.box-footer
							button.btn.btn-primary(type='button', id='btnAdd') Submit
							labl
				// /.box
